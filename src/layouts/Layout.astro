---
export interface Props {
  title: string;
}

const { title } = Astro.props;

import "uno.css";
import "@unocss/reset/tailwind.css";
---

<!DOCTYPE html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="dark:bg-onyx min-h-screen">
    <main class="w-screen-md mx-auto mt-16">
      <slot />
    </main>

    <div class="h-32"></div>

    <footer class="">
      <div class="w-fit mx-auto panel rounded-8 p-8">
        <div class="i-mdi-github w-12 h-12 text-linen inline-block" />
        <div class="i-carbon-logo-discord w-12 h-12 text-linen inline-block mx-4" />
        <div class="i-mdi-alternate-email w-12 h-12 text-linen inline-block" />
      </div>
    </footer>

    <style is:global>
      .panel {
        box-shadow: 8px 8px 16px #2a2c2f, -8px -8px 16px #46494e;
      }
    </style>
  </body>
</html>
