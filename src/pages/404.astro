---
//import "uno.css";
import "@unocss/reset/tailwind.css";

import "uno.css";
import ContactIcons from "../components/ContactIcons";
import Menu from "../components/Menu";
import { ViewTransitions } from "astro:transitions";
---

<!DOCTYPE html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/bitmap.svg" />
    <title>Vincent / 404</title>
    <ViewTransitions/>
  </head>
  <body class="dark:bg-onyx min-h-screen">
    <div
      class="fixed -top-28 left-50 border-pale-grey/20 border-3 w-220 h-220 rounded-full -z-10 rotating-ring animation-36"
    >
    <div
      class="absolute top-104 -right-6 border-pale-grey border-3 w-12 h-12 rounded-full -z-10 opacity-70"
    >
    </div>
    </div>
    <div
      class="fixed -top-40 left-48 border-pale-grey/20 border-3 w-180 h-180 rounded-full -z-10 rotating-ring animation-20"
    >
      <div
        class="absolute top-80 -right-10 border-pale-grey border-3 w-20 h-20 rounded-full -z-10 opacity-70"
      >
      </div>
    </div>

    <main class="w-screen-sm px-16 xl:px-0 pt-92 z-10 mx-auto">
      <h1 class="font-geo text-6xl text-pale-grey">404.</h1>
      <div class="h-8"></div>
      <h2 class="font-gothic text-pale-grey text-2xl">This page doesn't exist</h2>
      <div class="h-4"></div>
      <h2 class="font-gothic text-pale-grey text-2xl">Maybe it isn't finished yet. Perhaps it won't ever be.</h2>
      <div class="h-32"></div>
      <ContactIcons client:load />
    </main>

    <div class="h-32"></div>

    <div></div>

    <Menu client:load />

    <style is:global>
      .panel {
        box-shadow: 8px 8px 16px #2a2c2f, -8px -8px 16px #46494e;
      }

      .shadow-menu {
        box-shadow: 22px 1px 23px -1px rgba(0, 0, 0, 0.2);
        -webkit-box-shadow: 22px 1px 23px -1px rgba(0, 0, 0, 0.2);
        -moz-box-shadow: 22px 1px 23px -1px rgba(0, 0, 0, 0.2);
      }

      .shadow-popup {
        box-shadow: 1px 1px 9px 4px rgba(0, 0, 0, 0.3);
        -webkit-box-shadow: 1px 1px 9px 4px rgba(0, 0, 0, 0.3);
        -moz-box-shadow: 1px 1px 9px 4px rgba(0, 0, 0, 0.3);
      }

      .show-popup {
        animation-name: popup;
        animation-duration: 2s;
      }

      @keyframes popup {
        0% {
          opacity: 1;
        }
        50% {
          opacity: 1;
        }
        100% {
          opacity: 0;
        }
      }

      @font-face {
        font-family: "Geometos";
        src: url("/font/Geometos.ttf") format("truetype");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: "Century Gothic";
        src: url("/font/CenturyGothic.ttf") format("truetype");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }

      @keyframes r1 {
        from {
          transform: rotate(0deg);
        }
        to {
          transform: rotate(360deg);
        }
      }

      div.rotating-ring {
        animation-name: r1;
        animation-timing-function: linear;
        animation-iteration-count: infinite;

        transform-origin: center;
      }

      .animation-20 {
        animation-duration: 20s;
      }
      .animation-36 {
        animation-duration: 36s;
      }
    </style>
  </body>
</html>
